{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j3",
                "ENABLE_DEBUG=1",
                "USE_GPSD=1"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "make",
            "args": [
                "-j3",
                "tests",
                "ENABLE_DEBUG=1",
                "USE_GPSD=1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}